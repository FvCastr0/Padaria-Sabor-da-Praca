generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id         Int      @id @default(autoincrement())
  name       String
  contact    String
  created_at DateTime @default(now())
  stock      Stock[]
}

model Stock {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  value      Float
  stock      Int
  min_stock  Int
  supplier   Supplier  @relation(fields: [supplierId], references: [id])
  supplierId Int
  created_at DateTime  @default(now())
  products   Product[] @relation("ProductStock")
}

model Product {
  id           Int     @id @default(autoincrement())
  name         String  @unique
  value        Int
  raw_material Stock[] @relation("ProductStock")
}
