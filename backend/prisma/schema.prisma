generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id           Int           @id @default(autoincrement())
  name         String
  contact      String
  created_at   DateTime      @default(now())
  raw_material RawMaterial[]
}

model Product {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  value       Float
  composition Composition[]
}

model RawMaterial {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  value       Float
  stock       Float
  min_stock   Float
  supplierId  Int
  created_at  DateTime      @default(now())
  composition Composition[]
  supplier    Supplier      @relation(fields: [supplierId], references: [id])

  @@index([supplierId], map: "Stock_supplierId_fkey")
}

model Composition {
  id            Int         @id @default(autoincrement())
  quantity      Float
  rawMaterialId Int
  productId     Int
  product       Product     @relation(fields: [productId], references: [id])
  rawMaterials  RawMaterial @relation(fields: [rawMaterialId], references: [id])

  @@index([productId], map: "Composition_productId_fkey")
  @@index([rawMaterialId], map: "Composition_rawMaterialId_fkey")
}
